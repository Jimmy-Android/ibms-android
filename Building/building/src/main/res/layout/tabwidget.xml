<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/width48"
    android:layout_marginTop="@dimen/width5"
    android:background="#fff"
  	 >
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#eee"></View>
    <ImageView
        android:id="@+id/iv_mark"
        android:layout_width="@dimen/width30"
        android:layout_height="@dimen/width30"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/width5"
        />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_15_464646"
        android:layout_centerHorizontal="true" 
        android:text="111"
        android:textColor="@drawable/tab_home_font_style"
        android:layout_below="@id/iv_mark"
        android:layout_marginTop="@dimen/width3"
        android:gravity="center"
        />
    


</RelativeLayout>