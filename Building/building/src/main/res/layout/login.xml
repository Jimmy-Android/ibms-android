<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0ed"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/img_login_logo"
            android:layout_width="@dimen/width80"
            android:layout_height="@dimen/width80"
            android:background="@drawable/icon_logol"
            android:layout_marginTop="@dimen/width90"
            android:layout_gravity="center"/>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/width40"
        >
        <EditText
            android:id="@+id/email"
            android:layout_width="@dimen/width228"
            android:layout_height="@dimen/width43"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:hint="用户名"
            android:nextFocusForward="@+id/edit_login_password"
            android:paddingRight="@dimen/width18"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="@dimen/textsize15" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/width10"
        >
        <EditText
            android:id="@+id/password"
            android:layout_width="@dimen/width228"
            android:layout_height="@dimen/width43"
            android:layout_gravity="center"
            android:ems="10"
            android:gravity="center|left"
            android:textColorHint="@color/colorPrimary"
            android:inputType="textPassword"
            android:hint="密码"
            android:textColor="@color/colorPrimary"
            android:paddingRight="@dimen/width18"
            android:singleLine="true"
            android:textSize="@dimen/textsize15" />

    </android.support.design.widget.TextInputLayout>

    <com.andexert.library.RippleView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/more2"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/width30"
        rv_centered="true">
        <Button
            android:id="@+id/email_sign_in_button"
            android:layout_width="@dimen/width229"
            android:layout_height="@dimen/width34"
            android:background="@drawable/login_button_bg"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="#ffffff"
            android:textSize="@dimen/textsize16" />
    </com.andexert.library.RippleView>

</LinearLayout>