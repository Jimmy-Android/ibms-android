<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_login_logo"
        android:layout_width="@dimen/width58"
        android:layout_height="@dimen/width53"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/width103"
        android:background="@drawable/icon_logol" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/width20"
        android:text="@string/login_text"
        android:textColor="#fff"
        android:textSize="@dimen/width30" />
</LinearLayout>